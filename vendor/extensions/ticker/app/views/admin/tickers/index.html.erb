<% include_stylesheet 'admin/application' %>
<% include_stylesheet 'admin/tickers' %>

<div id="tickers-content">
  <h1>Homepage Ticker Items</h1>

  <hr />

  <div id="tickers">
    <% @tickers.each do |ticker| %>
    <div class="ticker">
      <h4><%=h ticker.title %></h4><small>(<%=h ticker.url %>)</small></span>
      <div class="edits">
        <%= link_to "#{image_tag ("admin/icons-small/edit.png", :border =>0, :title => 'Edit')}Edit", edit_admin_ticker_path(ticker) %>
        <%= link_to "#{image_tag ("admin/icons-small/delete.png", :border =>0, :title => 'Delete')}Delete", [:admin, ticker], :confirm => 'Are you sure?', :method => :delete %>
      </div>
    </div>
    <% end %>
  </div>

  <hr />
  <br />

  <%= link_to "#{image_tag ("admin/icons-small/add.png", :border =>0, :title => 'Add')}New Ticker Item", new_admin_ticker_path %>
</div>